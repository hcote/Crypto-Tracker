<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/style/style.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">
    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/scripts/app.js" charset="utf-8"></script>
  </head>

  <body>
    <header class="App-header">

      <div>
        <h1 class="">BitCheck</h1>
      </div>
      <ul>
        <li><a class="navLink" href='/'>Home</a></li>
        <% if (user == undefined) { %>
        <li><a class="navLink" href='/portfolio/>'>Portfolio</a></li>
        <li><a class="navLink" href='/favorites/>'>Favorites</a></li>
        <%  } else { %>
        <li><a class="navLink" href='/portfolio/<%= user._id.toString() %>'>Portfolio</a></li>
        <li><a class="navLink" href='/favorites/<%= user._id.toString() %>'>Favorites</a></li>
        <%  } %>
        <li><a class="navLink" href='/forums'>Forums</a></li>
        <li><a class="navLink" href='/news'>News</a></li>
        <% if (user == undefined) { %>
        <li><a class="navLink" href='/signup'>Sign Up</a></li>
        <li><a class="navLink" href='/login'>Log In</a></li>
        <%  } else { %>
        <li><a class="navLink" href='/user/<%= user._id.toString() %>'>Profile</a></li>
        <li><a class="navLink" href='/logout'>Logout</a></li>
        <%  } %>

      </ul>
    </header>

    <table>
      <tbody class="tbl_header">
        <tr class="table_head">
           <th className="tableHeader">Rank</th>
           <th className="tableHeader">Name</th>
           <th className="tableHeader">Symbol</th>
           <th className="tableHeader">Price $</th>
           <th className="tableHeader">Price BTC</th>
           <th className="tableHeader">24h Volume</th>
           <th className="tableHeader">Market Cap</th>
           <th className="tableHeader">% Change 1d</th>
           <th className="tableHeader">% Change 7d</th>
           <th className="tableHeader">Portfolio</th>
           <th className="tableHeader">Favorites</th>
        </tr>
        <% for (let coin of coins) { %>
        <tr class="table-row">
          <td><%= coin.rank %> </td>
          <td><%= coin.name %> </td>
          <td><%= coin.symbol %> </td>
          <td><%= coin.price_usd %> </td>
          <td><%= coin.price_btc %> </td>
          <td></td>
          <td><%= coin.market_cap_usd %> </td>
          <td><%= coin.percent_change_24h %>%</td>
          <td><%= coin.percent_change_7d %>%</td>
          <td>
            <form method='POST' action='/addCoin'>
              <input type='text' name='qty'></input>
              <input type='submit' class='btn' value='Add'></input>
              <input type='hidden' name='symbol' value='<%= coin.symbol %>'></input>
            </form>
         </td>
         <td>
         <form method='POST' action='/addToFavorites'>
           <input type='submit' class='btn' value='Add'></input>
           <input type='hidden' name='symbol' value='<%= coin.symbol %>'></input>
         </form>
         </td>
      </tr>
<%  } %>
      </tbody>
    </table>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.0/axios.js" charset="utf-8"></script>
  </body>
</html>
